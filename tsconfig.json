{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",                             // Change this line from "CommonJS" to "Node16"
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node16"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
